<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="46dp"
        android:layout_height="0dp"
        android:src="@drawable/img_detail_exo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/notosans_medium"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/iv_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_cover" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_regular"
        android:text="TextView"
        android:textColor="@color/grey_2"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/tv_playlist"
        app:layout_constraintTop_toBottomOf="@+id/tv_playlist" />

    <ImageView
        android:id="@+id/iv_play_allow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_see_more"
        app:layout_constraintEnd_toStartOf="@+id/iv_see_more"
        app:layout_constraintTop_toTopOf="@+id/iv_see_more"
        app:srcCompat="@drawable/ic_detail_play_allow" />

    <ImageView
        android:id="@+id/iv_see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_cover"
        app:layout_constraintVertical_bias="0.551"
        app:srcCompat="@drawable/ic_detail_see_more" />
</androidx.constraintlayout.widget.ConstraintLayout>